    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/UDebug/Apps/Render_Obj_File/render_obj_file",
            "args": [
                "/media/HomeSSD1/MySrc/mgame/models/MakeHuman/female_standing1.mhx2",
                "--bvh", "/media/HomeSSD1/MySrc/mgame/models/MakeHuman/07_01.bvh",
                "--animation_frame", "2",
                "--scale", "10",
                "--y", "-7",
                "--light_configuration", "one",
                "--no_shadows"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}